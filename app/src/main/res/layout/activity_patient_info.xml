<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mc.info.lumc.Main"
    android:id="@+id/patient_info_drawer">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_patient_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.mc.info.lumc.PatientInfo"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimary">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/patient_profile"
                android:id="@+id/activity_patient_info_profile"
                android:layout_alignParentTop="true"
                app:border_color="#000000"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:text="FirstName LastName"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:textColor="#FFFF"
                android:textSize="20dp"
                android:layout_gravity="start"
                android:id="@+id/activity_patient_info_Name"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/activity_patient_info_profile"
                android:layout_toEndOf="@+id/activity_patient_info_profile"
                android:paddingTop="35dp"
                android:paddingLeft="20dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <TextView
                android:text="Phone:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="3"/>

            <TextView
                android:text="Phone: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_patient_info_Phone"
                android:textSize="18sp"
                android:padding="8dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <TextView
                android:text="Email:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="3"/>

            <TextView
                android:text="Email: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_patient_info_Email"
                android:textSize="18sp"
                android:padding="8dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <TextView
                android:text="Address:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="3"/>

            <TextView
                android:text="Address:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_patient_info_Address"
                android:textSize="18sp"
                android:padding="8dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <Button
                android:text="Medical Examination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:id="@+id/activity_patient_info_medical_examination"/>

            <Button
                android:text="Medical Results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:id="@+id/activity_patient_info_medical_results"/>
        </LinearLayout>

        <Button
            android:text="View Medicines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_patient_info_view_medicine"
            android:onClick="goToMyMedicines"/>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:weightSum="1"
        android:background="#FFFFFF">

        <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/main_nav"
            app:menu="@menu/menu_drawer"
            app:headerLayout="@layout/user_drawer_header"/>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>