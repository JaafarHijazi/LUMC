    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal"
    >


    <TextView
        android:text="TextView fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_doctor_item_txtFname"
        android:layout_weight="1"
        />


    <TextView
        android:text="TextView lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_doctor_item_txtLname"
        android:layout_weight="1"

        />

    <TextView
        android:text="TextView specialty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_doctor_item_specialty"
        android:layout_weight="1"

        />
</LinearLayout>
